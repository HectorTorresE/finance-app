<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render partial: 'shared/nav_user', locals: {title: "LOGIN", form: f, button: "log in", back: root_path} %>
  <div class="inset-0 -z-10 mt-20 mb-24">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' , class: "w-full mt-4" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full border-t-0" %>
    <div class="text-center mt-2">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-text" %>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  </div>
<% end %>
