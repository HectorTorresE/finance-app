<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'shared/nav_user', locals: {title: "Sing up", form: f, button: "Next", back: root_path} %>
  <div class="inset-0 -z-10 mt-20 mb-24">
    <div class="flex flex-row items-center mt-2 ml-2">
      <img src=<%=image_path("user.png")%> id='icon' class="w-14 h-auto  mt-2"/>
      <label id="upload-btn" for="avatar" class="ml-4 text-text pt-2">Upload image</label>
        <%= f.file_field :image, accept: 'image/png,image/jpeg', class:"hidden" %>
    </div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full name' , class: "w-full mt-4" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' , class: "w-full border-t-0" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full border-t-0" %>
  </div>
<% end %>
